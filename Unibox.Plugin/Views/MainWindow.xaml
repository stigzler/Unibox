<Window x:Class="Unibox.Plugin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:Unibox.Plugin.ViewModels"
        xmlns:properties="clr-namespace:Unibox.Plugin.Properties"
        xmlns:local="clr-namespace:Unibox.Plugin.Views"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="Unibox Plugin Settings" Height="195" Width="415" WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vms:MainWindowVM, IsDesignTimeCreatable=True}">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Style.Resources>
                <Style TargetType="ContentPresenter">
                    <Style.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
            <Setter Property="MaxWidth" Value="250" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto " />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto " />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Image Source="/Unibox.Plugin;component/Resources/UniboxLogo64px.png" Height="32" />
            <TextBlock Text="Unibox Settings" FontSize="20" FontFamily="Arial Narrow" VerticalAlignment="Center" Margin="5" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Port" Margin="5" VerticalAlignment="Center"
                       ToolTip="The LAN port used for communications: a number between 49152-65535. Must match that in the Unibox App." />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                     Text="{Binding Port, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,
                        NotifyOnValidationError=True, Mode=TwoWay}" />

            <CheckBox Grid.Row="1" Grid.Column="1" Content="Show Game on Add" Margin="5"
                      IsChecked="{Binding Source={x:Static properties:Settings.Default},Path=ShowGameOnAdd}"
                      ToolTip="Navigates to the game in BigBox when added." />

            <CheckBox Grid.Row="2" Grid.Column="1" Content="Show Game on Edit" Margin="5"
                      IsChecked="{Binding Source={x:Static properties:Settings.Default},Path=ShowGameOnEdit}"
                      ToolTip="Navigates to the game in BigBox when Game metadata is edited." />
        </Grid>

        <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Content="Test" Width="100" Height="30" HorizontalAlignment="Right" Margin="5"
                    IsEnabled="{Binding IsValid}"
                    Command="{Binding TBD}" />

            <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Right" Margin="5"
                    IsEnabled="{Binding IsValid}"
                    Command="{Binding SaveSettingsCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </StackPanel>
    </Grid>
</Window>