<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adonis="clr-namespace:AdonisUI;assembly=AdonisUI">

    <Style TargetType="ToolTip">
        <Style.Resources>
            <Style TargetType="ContentPresenter">
                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>
        <Setter Property="MaxWidth" Value="250" />
    </Style>

    <Style TargetType="TextBlock" x:Key="PageHeader">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="4,0,0,4" />
    </Style>

    <Style TargetType="TextBlock" x:Key="PageSubText">
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Margin" Value="8,0,8,10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style TargetType="TextBlock" x:Key="GroupBoxSubHeading">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style TargetType="Button" x:Key="PageButton">
        <Setter Property="Margin" Value="2"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="MinWidth" Value="80"></Setter>
    </Style>

    <!-- Smooths images -->
</ResourceDictionary>