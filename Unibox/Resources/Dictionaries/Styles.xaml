<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adonis="clr-namespace:AdonisUI;assembly=AdonisUI"
                    xmlns:properties="clr-namespace:Unibox.Properties"
>

    <Style TargetType="ToolTip">
        <Style.Resources>
            <Style TargetType="ContentPresenter">
                <Style.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>
        <Setter Property="MaxWidth" Value="250" />
    </Style>

    <Style TargetType="TextBlock" x:Key="PageHeader">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="4,0,0,4" />
    </Style>

    <Style TargetType="TextBlock" x:Key="PageSubText">
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Margin" Value="8,0,8,10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style TargetType="TextBlock" x:Key="GroupBoxSubHeading">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style TargetType="Button" x:Key="PageButton">
        <Setter Property="Margin" Value="2"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="MinWidth" Value="80"></Setter>
    </Style>

    <Style TargetType="{x:Type Window}" BasedOn="{StaticResource {x:Type Window}}">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="UseLayoutRounding" Value="True" />
    </Style>

    <Style TargetType="GridSplitter">
        <Style.Triggers>
            <Trigger Property="VerticalAlignment" Value="Stretch">
                <Setter Property="BorderThickness" Value="1,0,1,0"></Setter>
                <Setter Property="BorderBrush" Value="LightGray"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Canvas Height="28" Width="7">
                                <Ellipse Width="4" Height="4" Canvas.Left="1" Canvas.Top="0" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="1" Canvas.Top="8" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="1" Canvas.Top="16" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="1" Canvas.Top="24" Fill="LightGray"></Ellipse>
                            </Canvas>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="HorizontalAlignment" Value="Stretch">
                <Setter Property="BorderThickness" Value="1,0,1,0"></Setter>
                <Setter Property="BorderBrush" Value="LightGray"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Canvas Height="60" Width="40">
                                <Rectangle Width="50" Height="40" Canvas.Left="-10" Canvas.Top="-30" Fill="Transparent" />
                                <Ellipse Width="4" Height="4" Canvas.Left="0" Canvas.Top="1" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="8" Canvas.Top="1" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="16" Canvas.Top="1" Fill="LightGray"></Ellipse>
                                <Ellipse Width="4" Height="4" Canvas.Left="24" Canvas.Top="1" Fill="LightGray"></Ellipse>
                            </Canvas>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Smooths images -->
    <Style x:Key="ComboBoxItemPaddingStyle" TargetType="ComboBoxItem">
        <Setter Property="Padding" Value="{Binding Source={x:Static properties:Settings.Default},Path=AppListPadding}" />
    </Style>

    <!-- Date Picker -->
    <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}"
       BasedOn="{StaticResource {x:Type Calendar}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Calendar}">
                    <Viewbox Height="{Binding Source={x:Static properties:Settings.Default},Path=AppCalendarSize}"
                             Width="{Binding Source={x:Static properties:Settings.Default},Path=AppCalendarSize}">
                        <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}" />
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>