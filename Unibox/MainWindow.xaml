<Window x:Class="Unibox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox"
        xmlns:views="clr-namespace:Unibox.Views"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:converters="clr-namespace:Unibox.Converters"
        xmlns:properties="clr-namespace:Unibox.Properties"
        xmlns:vm="clr-namespace:Unibox.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowVM, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="Unibox"
        Height="{Binding Source={x:Static properties:Settings.Default},Path=AppMainHeight}"
        Width="{Binding Source={x:Static properties:Settings.Default},Path=AppMainWidth}"
        FontSize="{Binding Source={x:Static properties:Settings.Default},Path=AppFontSize}"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing"
        SizeChanged="Window_SizeChanged">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Window.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToWidthConverter x:Key="BoolToWidthConverter" />

            <Style x:Key="SlideMenuMuttons" TargetType="Button">
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="10,5" />
            </Style>

            <Style TargetType="Image">
                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="4" HorizontalAlignment="Stretch">

        <!-- MAIN GRID -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!--<ColumnDefinition Width="{Binding IsMenuOpen, Converter={StaticResource BoolToWidthConverter}}" />-->
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Collapsible Menu -->
            <StackPanel Grid.Column="0">

                <!-- Menu Buttons -->

                <StackPanel Margin="5" Orientation="Horizontal">
                    <Button  Command="{Binding ToggleMenuCommand}"
                                Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                        <Image Source="/Resources/Images/UniboxLogo.png" MaxWidth="32"  Margin="4,0,4,0" />
                    </Button>
                    <TextBlock Text="{Binding LogoText}" Margin="10" VerticalAlignment="Center" FontFamily="Arial Narrow"
                               Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>

                <Button Margin="5"  Command="{Binding NavigateToGamesCommand}" HorizontalContentAlignment="Left"
                             Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/GameIcon.png" MaxWidth="32" Margin="4,0,4,0" />
                        <TextBlock Text="Games" Margin="5"  FontWeight="Bold" VerticalAlignment="Center"
                                   Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Button>

                <Button Margin="5"  Command="{Binding NavigateToInstallationsCommand}" HorizontalContentAlignment="Left"
                             Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/LaunchboxIcon.png" MaxWidth="32" Margin="4,0,4,0" />
                        <TextBlock Text="Installations" Margin="5" FontWeight="Bold" VerticalAlignment="Center"
                                   Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Button>

                <Button  Margin="5" Command="{Binding NavigateToSettingsCommand}" HorizontalContentAlignment="Left"
                         Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Settings.png" MaxWidth="32" Margin="4,0,4,0" />
                        <TextBlock Text="Settings" Margin="5" FontWeight="Bold" VerticalAlignment="Center"
                                   Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Main Content -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
        </Grid>
    </Grid>
</Window>