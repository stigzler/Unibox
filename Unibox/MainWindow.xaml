<Window x:Class="Unibox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid Background="{DynamicResource WindowBackground}">
        
        <StackPanel>
            <Menu Background="{DynamicResource MenuBackground}" Foreground="{DynamicResource TextForeground}">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="View">
                    <MenuItem x:Name="DarkModeMI" Header="Dark Mode" IsCheckable="True" Click="ThemeToggle_Click"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
        
        <StackPanel Height="200" Width="140" Background="{DynamicResource ListItemBackground}">
            <TextBlock Text="Unibox" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="24" Foreground="{DynamicResource Heading1}"/>
            <TextBlock Text="Theme Test" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" FontSize="12" Foreground="{DynamicResource TextForeground}" />
        </StackPanel>
    </Grid>
</Window>
