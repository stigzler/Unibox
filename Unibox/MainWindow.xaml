<Window x:Class="Unibox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox"
        xmlns:views="clr-namespace:Unibox.Views"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:converters="clr-namespace:Unibox.Converters"
        xmlns:properties="clr-namespace:Unibox.Properties"
        xmlns:vm="clr-namespace:Unibox.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowVM, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="Unibox"
        Height="{Binding Source={x:Static properties:Settings.Default},Path=AppMainHeight}"
        Width="{Binding Source={x:Static properties:Settings.Default},Path=AppMainWidth}"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Window.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToWidthConverter x:Key="BoolToWidthConverter" />

            <Style x:Key="SlideMenuMuttons" TargetType="Button">
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="10,5" />
            </Style>

            <Style TargetType="Image">
                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="4">

        <DockPanel LastChildFill="True">

            <!-- STATUS BAR -->
            <!--<StatusBar DockPanel.Dock="Bottom" Background="#202020" Foreground="#f0f0f0">
                <StatusBarItem>
                    <ProgressBar Width="100" Height="5" Margin="5" VerticalAlignment="Center"
                                 Value="{Binding StatusBarProgressBarPercentage}" IsIndeterminate="{Binding StatusBarProgressBarIndeterminate}" />
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusBarText}" Margin="5,0,0,0" />
                </StatusBarItem>
            </StatusBar>-->
            <!-- TITLE BAR -->
            <!--<Grid HorizontalAlignment="Left" Margin="0,0,0,6" DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                -->

            <!-- MAIN GRID -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding IsMenuOpen, Converter={StaticResource BoolToWidthConverter}}" />
                    <ColumnDefinition Width="2" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Collapsible Menu -->
                <StackPanel Grid.Column="0"  Grid.ColumnSpan="2">

                    <!-- Menu Buttons -->

                    <StackPanel Orientation="Horizontal">
                        <Button Padding="5" Margin="2,3,2,2" Command="{Binding ToggleMenuCommand}">
                            <Image Source="/Resources/Images/UniboxLogo.png" Width="24" Margin="4,0,4,0" />
                        </Button>
                        <TextBlock Text="{Binding LogoText}" Margin="5" FontSize="24"  VerticalAlignment="Center" FontFamily="Arial Narrow" />
                    </StackPanel>

                    <Button  Padding="5" Margin="2,3,2,2" Command="{Binding NavigateToGamesCommand}" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/GameIcon.png" Width="24" Margin="4,0,4,0" />
                            <TextBlock Text="Games" Margin="5" FontSize="16" FontWeight="Bold" />
                        </StackPanel>
                    </Button>

                    <Button  Padding="5" Margin="2,3,2,2" Command="{Binding NavigateToInstallationsCommand}" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/LaunchboxIcon.png" Width="24" Margin="4,0,4,0" />
                            <TextBlock Text="Installations" Margin="5" FontSize="16" FontWeight="Bold" />
                        </StackPanel>
                    </Button>

                    <Button Padding="5" Margin="2" Command="{Binding NavigateToSettingsCommand}" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/Settings.png" Width="24" Margin="4,0,4,0" />
                            <TextBlock Text="Settings" Margin="5" FontSize="16" FontWeight="Bold" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Main Content -->
                <ContentControl Grid.Column="2"
                                Content="{Binding CurrentPage}" Background="Green" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>