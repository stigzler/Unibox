<UserControl x:Class="Unibox.Views.GamesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Unibox.Views"
             xmlns:vm="clr-namespace:Unibox.ViewModels"
             xmlns:converters="clr-namespace:Unibox.Converters"
             mc:Ignorable="d" d:Foreground="White"
             d:DataContext="{d:DesignInstance Type=vm:GamesVM, IsDesignTimeCreatable=True}"
             d:Height="139" d:Width="800" d:DesignHeight="202" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
        <converters:PathToFilenameConverter x:Key="PathToFilenameConverter" />
        <converters:DateTimeToYearConverter x:Key="DateTimeToYearConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--- TOP MENU BAR -->
        <Grid Grid.Row="0" Height="auto" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/Resources/Images/LaunchboxIcon.png" Width="32" />
            <ComboBox Grid.Column="1" x:Name="InstallationsCB" MinWidth="150" ItemsSource="{Binding InstallationsView}"
                      DisplayMemberPath="Name" SelectedItem="{Binding SelectedInstallation}" Margin="5" />

            <Grid Grid.Column="2" Grid.ColumnSpan="2"
                  Visibility="{Binding SelectedInstallation, Converter={StaticResource NullToVisibilityConverter}}"
                  d:Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Resources/Images/Platform.png" Width="32" Margin="5" />
                <ComboBox Grid.Column="1" MinWidth="150" ItemsSource="{Binding PlatformsView}" DisplayMemberPath="Name" Margin="5"
                      SelectedItem="{Binding SelectedPlatform}" Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToVisibilityConverter}}" />
                <StackPanel Grid.Column="1" DockPanel.Dock="Left" Orientation="Horizontal" HorizontalAlignment="left" Margin="4,0,0,0"
                    Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                    <Image Source="/Resources/Images/minus-circle.png" Height="24" />
                    <TextBlock Text="Installation Unreachable" VerticalAlignment="Center" Margin="5" />
                </StackPanel>
            </Grid>

            <Button Grid.Column="4" Margin="5" Padding="5" Width="150" DockPanel.Dock="Right" Command="{Binding AddRomCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/AddRom.png" Height="28" />
                    <TextBlock Text="Add Rom/s" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- GAMES GRID -->
        <Grid Grid.Row="1" Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToVisibilityConverter}}" d:Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Games Grid and Search -->
            <DockPanel Grid.Row="0" Margin="5,0,5,5">
                <TextBlock DockPanel.Dock="Left" Text="Search: " FontWeight="Bold" Margin="4" VerticalAlignment="Center" />
                <TextBox Text="{Binding SearchTerm,UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Margin="4" />
            </DockPanel>

            <Border BorderThickness="1" BorderBrush="Gray" Grid.Row="1" Margin="5">
                <ListView ItemsSource="{Binding GamesView}" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="Rom File" Width="auto" DisplayMemberBinding="{Binding ApplicationPath,
                            Converter={StaticResource PathToFilenameConverter}}" />
                            <GridViewColumn Header="Developer" Width="auto" DisplayMemberBinding="{Binding Developer}" />
                            <GridViewColumn Header="Publisher" Width="auto" DisplayMemberBinding="{Binding Publisher}" />
                            <GridViewColumn Header="Release Date" Width="auto" DisplayMemberBinding="{Binding ReleaseDate, Converter={StaticResource DateTimeToYearConverter}}" />
                            <GridViewColumn Header="Launchbox Rom Path" Width="auto" DisplayMemberBinding="{Binding ApplicationPath}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>

        <!--- BOTTOM BUTTONS -->
        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
            <Button Margin="5" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/AddRom.png" Height="32" />
                    <TextBlock Text="Add Rom" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </StackPanel>-->
    </Grid>
</UserControl>