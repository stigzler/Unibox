<UserControl x:Class="Unibox.Views.GamesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Unibox.Views"
             xmlns:vm="clr-namespace:Unibox.ViewModels"
             xmlns:converters="clr-namespace:Unibox.Converters"
             xmlns:properties="clr-namespace:Unibox.Properties"
             mc:Ignorable="d" d:Foreground="White"
             d:DataContext="{d:DesignInstance Type=vm:GamesVM, IsDesignTimeCreatable=True}"
             d:Height="139" d:Width="800" d:DesignHeight="189" d:DesignWidth="728"
             FontSize="{Binding Source={x:Static properties:Settings.Default},Path=AppFontSize}"
             x:Name="GamesPageControl">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Dictionaries/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
            <converters:PathToFilenameConverter x:Key="PathToFilenameConverter" />
            <converters:DateTimeToYearConverter x:Key="DateTimeToYearConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:EightyPercentConverter x:Key="EightyPercentConverter" />
            <converters:NullToInverseVisibilityConverter x:Key="NullToInverseVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Resources/Images/LaunchboxIcon.png" Width="32" />
                <ComboBox Grid.Column="1" x:Name="InstallationsCB"  ItemsSource="{Binding InstallationsView}"
                      DisplayMemberPath="Name" SelectedItem="{Binding SelectedInstallation, Mode=TwoWay}" Margin="5"
                      ItemContainerStyle="{StaticResource ComboBoxItemPaddingStyle}" />
            </Grid>

            <Grid Grid.Column="1" Visibility="{Binding SelectedInstallation, Converter={StaticResource NullToVisibilityConverter}}"
                  d:Visibility="Visible">

                <Grid Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Resources/Images/Platform.png" Width="32" Margin="5" />

                    <ComboBox Grid.Column="1"   ItemsSource="{Binding PlatformsView}" DisplayMemberPath="Name" Margin="5"
                      SelectedItem="{Binding SelectedPlatform}" d:Visibility="Visible"
                      Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToVisibilityConverter}}"
                      ItemContainerStyle="{StaticResource ComboBoxItemPaddingStyle}"
                    MaxDropDownHeight="{Binding ActualHeight, ElementName=GamesPageControl, Converter={StaticResource EightyPercentConverter}}" />
                </Grid>

                <Grid Visibility="{Binding InstallationAvailable, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Resources/Images/minus-circle.png" Height="24" />
                    <TextBlock Grid.Column="1" Text="Installation Unreachable" VerticalAlignment="Center" Margin="5" />
                </Grid>
            </Grid>

            <StackPanel Grid.Column="2" Orientation="Horizontal">

                <StackPanel Orientation="Horizontal" Visibility="{Binding SelectedPlatform, Converter={StaticResource NullToVisibilityConverter}}"
                            d:Visibility="Visible">

                    <Button x:Name="ToggleNotesBT" Margin="5" ToolTip="Toggle Platform notes"
                   Visibility="{Binding SelectedPlatform.Notes, Converter={StaticResource NullToVisibilityConverter}}"
                         Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}"
                         Click="ToggleNotesBT_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/document-text.png"  HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button  Margin="5" ToolTip="Launch platform's associated application"
                            Visibility="{Binding SelectedPlatform.ApplicationPath, Converter={StaticResource NullToVisibilityConverter}}"
                            Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}"
                            Command="{Binding LaunchPlatformApplicationCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/gear.png"  HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button  Margin="5" ToolTip="Open platform's associated URL"
                            Command="{Binding OpenPlatformUrlCommand}"
                            Visibility="{Binding SelectedPlatform.Url, Converter={StaticResource NullToVisibilityConverter}}"
                            Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Images/globe-green.png"  HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button  Command="{Binding AddRomCommand}" Margin="5" MinWidth="140"
                   IsEnabled="{Binding CanAddRoms}" Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/AddRom.png" Height="28" />
                        <TextBlock Text="Add Rom/s" VerticalAlignment="Center" Margin="5,0,0,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0"
                Visibility="{Binding SelectedPlatform.Notes, Converter={StaticResource NullToVisibilityConverter}}">

                <DockPanel x:Name="PlatformNotesPN"  LastChildFill="True">
                    <Image DockPanel.Dock="Left" Source="/Resources/Images/document-text.png" Width="24" Margin="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}" />
                    <TextBox IsReadOnly="True" Text="{Binding SelectedPlatform.Notes}" BorderThickness="1" Background="Transparent"
                             MaxHeight="80" VerticalScrollBarVisibility="Auto" Margin="5"></TextBox>
                </DockPanel>
            </Grid>
        </Grid>

        <!-- Games Toolbar and List -->
        <Grid Grid.Row="1" VerticalAlignment="Stretch"
              Visibility="{Binding SelectedPlatform, Converter={StaticResource NullToVisibilityConverter}}"
              d:Visibility="Visible">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" DockPanel.Dock="Top"  d:Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Search: " FontWeight="Bold" VerticalAlignment="Center" Margin="5" />
                <TextBox Grid.Column="1"  Text="{Binding SearchTerm,UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <Button Grid.Column="2" DockPanel.Dock="Right" Command="{Binding EditGameCommand}" Margin="5" MinWidth="140"
                            IsEnabled="{Binding CanAddRoms}" Padding="{Binding Source={x:Static properties:Settings.Default},Path=AppButtonPadding}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Pencil.png" Height="28" />
                        <TextBlock Text="Edit Game" VerticalAlignment="Center" Margin="5,0,0,0" />
                    </StackPanel>
                </Button>
            </Grid>

            <Border Grid.Row="1" BorderThickness="1" BorderBrush="Gray" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView ItemsSource="{Binding GamesView}" SelectedItem="{Binding SelectedGame}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Title}" />
                            <GridViewColumn Header="Rom File" DisplayMemberBinding="{Binding ApplicationPath,
                            Converter={StaticResource PathToFilenameConverter}}" />
                            <GridViewColumn Header="Developer"  DisplayMemberBinding="{Binding Developer}" />
                            <GridViewColumn Header="Publisher"  DisplayMemberBinding="{Binding Publisher}" />
                            <GridViewColumn Header="Release Date"  DisplayMemberBinding="{Binding ReleaseDate, Converter={StaticResource DateTimeToYearConverter}}" />
                            <GridViewColumn Header="Launchbox Rom Path"  DisplayMemberBinding="{Binding ApplicationPath}" />
                            <GridViewColumn Header="Launchbox ID" DisplayMemberBinding="{Binding LaunchboxID}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
        <!--</StackPanel>-->

        <!--- BOTTOM BUTTONS -->
        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
            <Button Margin="5" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/AddRom.png" Height="32" />
                    <TextBlock Text="Add Rom" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </StackPanel>-->
    </Grid>
</UserControl>