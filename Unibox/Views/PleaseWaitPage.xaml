<UserControl x:Class="Unibox.Views.PleaseWaitPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Unibox.ViewModels"
             xmlns:properties="clr-namespace:Unibox.Properties"
             xmlns:local="clr-namespace:Unibox.Views"
             d:DataContext="{d:DesignInstance Type=vm:PleaseWaitVM, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             FontSize="{Binding Source={x:Static properties:Settings.Default},Path=AppFontSize}"
>
    <Grid Margin="10" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="4" MinHeight="100">
            <DockPanel Grid.Row="0" LastChildFill="True">
                <Image DockPanel.Dock="Left" Margin="10" Source="/Resources/Images/clock.png" Width="32" VerticalAlignment="Center" />
                <TextBlock  Text="{Binding Text}"  TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="4,4,4,10" VerticalAlignment="Center" />
            </DockPanel>

            <TextBlock  Text="{Binding PrimaryText}" FontFamily="Consolas" Margin="2" TextWrapping="Wrap"
                        Grid.ColumnSpan="2" VerticalAlignment="Bottom" TextTrimming="CharacterEllipsis" />
            <ProgressBar Grid.Row="1" IsIndeterminate="True"  Height="5" VerticalAlignment="Top" Grid.ColumnSpan="2" />
            <TextBlock  Text="{Binding SecondaryText}" FontFamily="Consolas" FontStyle="Italic" Margin="2" TextWrapping="Wrap"
                        Grid.ColumnSpan="2" VerticalAlignment="Bottom" />
        </StackPanel>
    </Grid>
</UserControl>