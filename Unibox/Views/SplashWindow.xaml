<Window x:Class="Unibox.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox.Views"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:vm="clr-namespace:Unibox.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:SplashVM, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="Splash" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Height="170">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="Fant" />
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="Gray">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />

                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Image Source="pack://application:,,,/Resources/Images/UniboxLogo512.png" Height="60" />
                <TextBlock Text="Unibox" FontFamily="Bahnschrift Condensed" FontSize="40" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
            <TextBlock x:Name="TaglineTBL" Grid.Row="1"  Text="The Launchbox Multi-Installation Unifier" Foreground="Gray"
                   HorizontalAlignment="Center" Margin="0,0,0,6" />
            <TextBlock x:Name="PrimaryTBL" Grid.Row="2" Text="{Binding PrimaryText, Mode=TwoWay}" Margin="4" HorizontalAlignment="Center" />

            <ProgressBar  x:Name="MainPB" Grid.Row="3" Value="{Binding MainProgressBarValue}" Maximum="100" Height="5" Foreground="Orange" Margin="2" />
            <TextBlock  x:Name="SecondaryTBL" Grid.Row="4" Text="{Binding SecondaryText, Mode=TwoWay}" Margin="4" Foreground="#888888" />
        </Grid>
    </Border>
</Window>