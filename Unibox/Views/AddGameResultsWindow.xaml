<Window x:Class="Unibox.Views.AddGameResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox.Views"
        xmlns:converters="clr-namespace:Unibox.Converters"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Unibox.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:AddGameResultsVM, IsDesignTimeCreatable=True}"
        Title="Add Game Results" Height="450" Width="800" WindowStartupLocation="CenterOwner">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Dictionaries/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ListOfStringToStringConverter x:Key="ListOfStringToStringConverter" />
            <converters:PathToFilenameConverter x:Key="PathToFilenameConverter" />
            <converters:BoolToTickCrossConverter x:Key="BoolToTickCrossConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Add Game Results" Style="{DynamicResource PageHeader}" Margin="5" />
        <Border Grid.Row="1"  BorderThickness="1" BorderBrush="Gray" Margin="5">
            <ListView ItemsSource="{Binding AddGameResults}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  SelectedItem="{Binding SelectedOutcome}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Added" Width="auto" DisplayMemberBinding="{Binding RomAdded, Converter={StaticResource BoolToTickCrossConverter}}" />
                        <GridViewColumn Header="Rom" Width="auto" DisplayMemberBinding="{Binding RomPath, Converter={StaticResource PathToFilenameConverter}}" />
                        <GridViewColumn Header="Game Name" Width="auto" DisplayMemberBinding="{Binding Game.Title}" />
                        <GridViewColumn Header="Full Rom Path" Width="auto" DisplayMemberBinding="{Binding RomPath}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" Margin="5">
            <ScrollViewer  Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Details:" />
                    <TextBlock Grid.Row="1" Text="{Binding SelectedOutcome.Outcomes, Converter={StaticResource ListOfStringToStringConverter}}" Margin="4" />
                </Grid>
            </ScrollViewer>
        </Border>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="CloseBT" Content="Close" Command="{Binding CloseCommand}" Margin="5" Width="100" Click="CloseBT_Click" />
        </StackPanel>
    </Grid>
</Window>