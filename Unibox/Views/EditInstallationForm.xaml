<Window x:Class="Unibox.Views.EditInstallationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unibox.Views"
        mc:Ignorable="d"
        xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns:vm="clr-namespace:Unibox.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:EditInstallationVM, IsDesignTimeCreatable=True}"
        xmlns:properties="clr-namespace:Unibox.Properties"  
        Title="Edit Installation" Height="538" Width="618" WindowStartupLocation="CenterOwner">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>

    <Window.Resources>
        <ResourceDictionary Source="/Resources/Dictionaries/Styles.xaml"/>
    </Window.Resources>

    <DockPanel Margin="2,2,2,6" LastChildFill="True">

        <StackPanel DockPanel.Dock="Top">
            <TextBlock  Text="Edit Installation" Style="{DynamicResource PageHeader}"/>
            <TextBlock Text="{x:Static properties:Resources.EditInstalltionSubTitle}" Style="{DynamicResource PageSubText}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Content="Cancel" Margin="5" Width="75" 
                    Command="{Binding ProcessCancelButtonCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="OK" Margin="5" Width="75"
                    Command="{Binding ProcessOkButtonCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"  
                    IsEnabled="{Binding IsValid, Mode=OneWay, ValidatesOnDataErrors=True}"/>
        </StackPanel>

        <StackPanel Orientation="Vertical">
            <GroupBox Header="Required" Margin="6" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>

                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Launchbox Root Directory:" Margin="5" HorizontalAlignment="Right"
                               ToolTip="The root directory of the Launchbox installation you wish to add."/>
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Name:" Margin="5" HorizontalAlignment="Right"/>

                    <TextBox Grid.Column="1" Grid.Row="0" Margin="5" IsReadOnly="True"
                     Text="{Binding Installation.InstallationPath, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom"/>

                    <TextBox Grid.Column="1" Grid.Row="1" Margin="5" 
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom"/>

                    <Button Grid.Column="2" Grid.Row="0" Margin="5" Content="Browse..." Command="{Binding BrowseForInstallationPathCommand}"/>

                </Grid>

            </GroupBox>

            <GroupBox Margin="6">
                <GroupBox.Header>
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Left" Text="Remote Path Modifications (optional)" VerticalAlignment="Center"/>
                        <Button DockPanel.Dock="Right" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" Margin="0" Content="Show Paths" Command="{Binding ShowPlatformRomFoldersCommand}"
                            ToolTip="Show Launchbox database paths for Rom and media paths. Helps setting up path modifications."/>
                        <Image DockPanel.Dock="Left" Source="pack://application:,,,/Resources/Images/information.png" Margin="5,0,0,0"
                               Width="16" VerticalAlignment="Center" HorizontalAlignment="Left"
                          ToolTip="{x:Static properties:Resources.AddInstallationPathReplacementHelp}"   />
                    </DockPanel>
                </GroupBox.Header>

                <Grid IsEnabled="{Binding OnRemoteMachine}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Text="Platform Rom Paths:"
                               ToolTip=""
                               Margin="5,5,5,5" Style="{DynamicResource GroupBoxSubHeading}"/>


                    <TextBlock Grid.Row="1" Text="Replace text:" Margin="0,5,0,5" HorizontalAlignment="Center" Width="68"/>
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="With:" Margin="44,5,0,5" HorizontalAlignment="Left" Width="28"/>

                    <TextBox Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" 
                             Text="{Binding RemapRomsFrom, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom" Grid.ColumnSpan="4"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" IsReadOnly="True"
                            Text="{Binding RemapRomsTo, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True, Mode=TwoWay}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom" Grid.ColumnSpan="2"/>

                    <Button Grid.Column="3" Grid.Row="2" Margin="2,5,2,5" Command="{Binding BrowseForRemapToCommand}"
                            CommandParameter="Roms" ToolTip="Browse for folder" Width="32">
                        <Image Source="/Resources/Images/folder-horizontal-open.png"  />
                    </Button>
                    <Button Grid.Column="4" Grid.Row="2" Margin="2,5,2,5" Command="{Binding ClearTextCommand}"
                            CommandParameter="Roms" ToolTip="Clear" Width="32">
                        <Image Source="/Resources/Images/eraser.png"  />

                    </Button>

                    <TextBlock Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" Text="Media Paths:"
                               ToolTip=""
                               Margin="5,5,5,5" Style="{DynamicResource GroupBoxSubHeading}"/>

                    <TextBlock Grid.Row="4" Text="Replace text:" Margin="0,5,0,5" HorizontalAlignment="Center" Width="68"/>
                    <TextBlock Grid.Column="0" Grid.Row="5" Text="With:" Margin="44,5,0,5" HorizontalAlignment="Left" Width="28"/>

                    <TextBox Grid.Column="1" Grid.Row="4" Margin="5,5,5,5"
                             Text="{Binding RemapMediaFrom, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom" Grid.ColumnSpan="4"/>
                    <TextBox Grid.Column="1" Grid.Row="5" Margin="5,5,5,5"
                            Text="{Binding RemapMediaTo, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True, Mode=TwoWay}" adonisExtensions:ValidationExtension.ErrorMessagePlacement="Bottom" Grid.ColumnSpan="2"/>

                    <Button Grid.Column="3" Grid.Row="5" Margin="2,5,2,5" Command="{Binding BrowseForRemapToCommand}"
                       CommandParameter="Media" ToolTip="Browse for folder" Width="32">
                        <Image Source="/Resources/Images/folder-horizontal-open.png"  />
                    </Button>
                    <Button Grid.Column="4" Grid.Row="5" Margin="2,5,2,5" Command="{Binding ClearTextCommand}"
                       CommandParameter="Media" ToolTip="Clear" Width="32">
                        <Image Source="/Resources/Images/eraser.png"  />

                    </Button>

                </Grid>

            </GroupBox>

        </StackPanel>



    </DockPanel>

</Window>
